.coin-info-wrap {
    width: 95%;
    margin: 2% 2.5%;
}

.coin-info-logo {
    width: 35px;
    height: 35px;
    vertical-align: middle;
    margin-right: 5px;
}

.coin-info-name {
    display: inline-block;
    color: #1296db;
}

.coin-info-gai {
    align-content: center;
}

.coin-info-gai-title {
    width: 100%;
    display: block;
    text-align: center;
    padding: 5% 0;
}

.coin-info-gai-text {
    width: 100%;
    text-align: center;
    font-size: 31rpx;
}

.github-logo {
    width: 24px;
    height: 24px;
    display: inline-block;
    vertical-align: text-bottom;
    margin-right: 10rpx;
}

.develop-title {
    display: inline-block;
}

.line2 {
    width: 100%;
    height: 1px;
    background: #eee;
    margin: 8rpx 0;
    padding: 0 !important;
}

.coin-info-des {
    font-size: 28rpx;
    margin: 30rpx 0;
    text-indent: 56rpx;
    line-height: 40rpx;
    word-break: break-all;
}

.view-maggin {
    margin: 8% 0;
}

.coin-info-gai-sorce {
    font-size: 28rpx;
    color: green;
    padding: 15rpx 0;
    border-bottom: 1px solid #eee;
}

.coin-develop view {
    font-size: 31rpx;
    vertical-align: middle;
}

.develop-text {
    color: green;
}

.deveplo-logo {
    width: 18px;
    height: 18px;
    margin-right: 3rpx;
    vertical-align: text-bottom;
}

.cap_rank {
    color: green;
    font-size: 31rpx;
    margin-top: 5%;
    margin-left: 8%;
}

.item {
    display: inline-block;
    width: 50%;
    vertical-align: top;
}

.item-left {
    width: 49%;
    border-right: 1px solid #eee;
}

.item view {
    margin: 15rpx 0 0 0;
}