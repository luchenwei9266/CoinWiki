<scroll-view class="coin-info-wrap">
    <!-- 头部介绍 -->
    <view style="margin-top:5%">
        <image src="{{coinObject.image.small}}" class="coin-info-logo" style="width:50px;height:50px"></image>
        <view class="coin-info-name">
          {{ coinObject.localization.zh }}/{{ coinObject.localization.en }}
        </view>
        <view class="cap_rank">市值排名: {{ coinObject.market_cap_rank }}</view>
        <view class="coin-info-des">{{ coinObject.description.en }}</view>
    </view>

    <!-- 得分 -->
    <view class="coin-info-gai view-maggin">
        <view class="coin-info-gai-title">
          <image src="../../assets/gaiyao.png" class="github-logo"></image>
          <view>概要</view>
        </view>
        <view class="line"></view>
        <view class="coin-info-gai-text">
          <view >指标总得分:</view>
          <view class="coin-info-gai-sorce">{{ coinObject.coingecko_score }} %</view>
          <view>开发人员活跃度:</view>
          <view class="coin-info-gai-sorce">{{ coinObject.developer_score }} %</view>
          <view>社区活跃度:</view>
          <view class="coin-info-gai-sorce">{{ coinObject.community_score }} %</view>
          <view>交易流动性:</view>
          <view class="coin-info-gai-sorce">{{ coinObject.liquidity_score }} %</view>
        </view>
    </view>

    <!-- 开发人员 -->
    <view style="text-align:center" class="view-maggin coin-develop">
        <view>
          <image src="../../assets/github.png" class="github-logo"></image>
          <view class="develop-title">开发</view>
        </view>
        <view class="line2"></view>
        <view>
          <image src="../../assets/starts.png" class="deveplo-logo"></image>
          粉丝:<span class="develop-text"> {{ coinObject.developer_data.stars }}</span>
        </view>
        <view>
          <image src="../../assets/fork.png" class="deveplo-logo"></image>
          分叉:<span class="develop-text"> {{ coinObject.developer_data.forks }}</span>
          </view>
        <view>
          <image src="../../assets/merge.png" class="deveplo-logo"></image>
          合并拉取请求: <span class="develop-text"> {{ coinObject.developer_data.pull_requests_merged }}</span>
        </view>
        <view>
          <image src="../../assets/subscribe.png" class="deveplo-logo"></image>
          关注:<span class="develop-text"> {{ coinObject.developer_data.subscribers }}</span>
        </view>
        <view>
          <image src="../../assets/contributors.png" class="deveplo-logo"></image>
          贡献者:<span class="develop-text"> {{ coinObject.developer_data.pull_request_contributors }}</span>
        </view>
        <view>
          <image src="../../assets/issue.png" class="deveplo-logo"></image>
          已解决问题/问题总数:<span class="develop-text"> {{ coinObject.developer_data.closed_issues }} / {{ coinObject.developer_data.total_issues }}</span>
        </view>
    </view>

    <!-- 社区 -->
  <view style="text-align:center" class="view-maggin coin-develop">
        <view>
          <image src="../../assets/shequ.png" class="github-logo"></image>
          <view class="develop-title">社区</view>
        </view>
        <view class="line2"></view>
        <view>
          <image src="../../assets/reddit.png" class="deveplo-logo"></image>
          Reddit用户 :<span class="develop-text"> {{ coinObject.community_data.reddit_subscribers }}</span>
        </view>
        <view>
          <image src="../../assets/reddit.png" class="deveplo-logo"></image>
          平均在线用户:<span class="develop-text"> {{ coinObject.community_data.reddit_accounts_active_48h }}</span>
          </view>
        <view>
          <image src="../../assets/reddit.png" class="deveplo-logo"></image>
          平均每小时新增热帖: <span class="develop-text"> {{ coinObject.community_data.reddit_average_posts_48h }}</span>
        </view>
        <view>
          <image src="../../assets/reddit.png" class="deveplo-logo"></image>
          平均每小时热帖新增评论:<span class="develop-text"> {{ coinObject.community_data.reddit_average_comments_48h }}</span>
        </view>
        <view>
          <image src="../../assets/twiter.png" class="deveplo-logo"></image>
          Twitter Followers:<span class="develop-text"> {{ coinObject.community_data.twitter_followers }}</span>
        </view>
        <view>
          <image src="../../assets/FaceBook.png" class="deveplo-logo"></image>
          Facebook Likes:<span class="develop-text"> {{ coinObject.community_data.facebook_likes}}</span>
        </view>
    </view>
</scroll-view>


